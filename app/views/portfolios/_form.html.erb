<%= form_for(@portfolio_item) do |form| %>
		<!-- divide page into two columns, define the left one first -->
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			    <%= form.label :title %>
			    <%= form.text_field :title, class: 'form-control' %>
  			</div>

			<div class="form-group">
			    <%= form.label :subtitle %>
			    <%= form.text_field :subtitle, class: 'form-control' %>
			</div>
		</div>
		<!-- now define the right column -->
		<div class="col-md-6">
			<div class="form-group">
			    <%= form.label :body %>
			    <%= form.text_area :body, class: 'form-control', rows: 13 %>
  			</div>
		</div>
	</div>
	
  <hr>

  <!--  Define the bottom half of the page, with a single full width column -->
  <div class="col-md-12">
	  <h2>Technologies Used:</h2>
	  <div>
	  	<%= form.fields_for :technologies do | technology_form | %>
	  	<div class="form-group"> 
	  		<%= technology_form.label :name %>
	  		<%= technology_form.text_field :name, class: 'form-control' %>
	  	</div>
	  	<% end %>
	  </div>
	  
	  <hr>
	  
	  <div class="form-group">
	    <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block'%>
	  </div>
	</div>
<% end %>
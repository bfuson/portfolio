<div class="blog-post">
	<h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
	<p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at,Time.now)%> ago</p>
	
	<% if logged_in?(:site_admin) %>
		<!-- specify the admin user only functionality -->
		<p class="blog-post-meta">
			<!-- these will all appear on the same line of display, separated by a '/' -->
		<%= link_to blog.status, toggle_status_blog_path(blog) %> /
		<%= link_to 'Edit', edit_blog_path(blog)   %> /
		<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
	
	<p>
	<%= blog.topic %> /
	<%= blog.body %> 
	</p> 
	
</div> 